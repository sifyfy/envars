{
  // See http://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "install",
      "args": ["install"]
    },
    {
      "taskName": "build-check",
      "args": ["run", "build-check"]
    },
    {
      "taskName": "build-check-watch",
      "args": ["run", "build-check-watch"],
      "isWatching": true
    },
    {
      "taskName": "build-debug",
      "args": ["run", "build-debug"]
    },
    {
      "taskName": "build-release",
      "args": ["run", "build-release"]
    },
    {
      "taskName": "doc",
      "args": ["run", "doc"]
    },
    {
      "taskName": "format",
      "args": ["run", "format"]
    },
    {
      "taskName": "format-watch",
      "args": ["run", "format-watch"],
      "isWatching": true
    },
    {
      "taskName": "test",
      "args": ["run", "test"]
    },
    {
      "taskName": "watch",
      "args": ["run", "watch"],
      "isWatching": true
    }
  ]
}
